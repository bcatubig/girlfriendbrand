---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  product: CollectionEntry<"products">;
}

const { product } = Astro.props;

const { cover, title, price_usd } = product.data;
---

<article>
  <div class="header">
    <Image class="cover" src={cover} alt={title} />

    <div class="content">
      <p class="title">{title}</p>
      <p class="price">&dollar;{price_usd}</p>
    </div>
  </div>

  <style>
    h2 {
      font-size: 1.25rem;
    }

    article {
      background: var(--background-50);
      max-inline-size: 350px;
      border-radius: 10px;
      box-shadow: 8px 8px 0 var(--background-800);
    }

    .content {
      padding: 1rem;
    }

    .cover {
      overflow: clip;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      object-fit: cover;
      /* clip-path: inset(0px 40px 0px 40px); */
    }

    .title {
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .price {
      color: var(--text-950);
      font-size: 12px;
      font-weight: 800;
    }
  </style>
</article>
